{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <section class="auth-section signup-section text-center py-5">

        <div class="auth-wrapper mx-auto shadow p-5 rounded">


            <div class="auth-form-container text-start mx-auto">

                {{ form_start(form , {'attr': {'class': 'auth-form auth-signup-form'}})}}

                {% if notification %}
                    <div class="alert alert-success">
                        {{ notification }}
                    </div>
                {% endif %}

                <div class="row">
                    <div class="email mb-3 col-6">
                        {{ form_label(form.uuid, 'Identifiant') }}
                        {{ form_row(form.uuid,  {'attr': {'class': 'form-control signup-email'}}) }}
                    </div><!--//form-group-->
                    <div class="email mb-3 col-6">
                        {{ form_label(form.nom, 'Nom') }}
                        {{ form_row(form.nom, {'attr': {'class': 'form-control signup-email'}}) }}
                    </div><!--//form-group-->

                    <div class="email mb-3 col-6">
                        {{ form_label(form.prenom, 'Prénom') }}
                        {{ form_row(form.prenom, {'attr': {'class': 'form-control signup-email'}}) }}
                    </div><!--//form-group-->
                    <div class="email mb-3 col-6">
                        {{ form_label(form.email, 'Email') }}
                        {{ form_row(form.email, {'attr': {'class': 'form-control signup-email'}}) }}
                    </div><!--//form-group-->
                    <div class="email mb-3 col-6">
                        {{ form_label(form.phone, 'Numéro de téléphone') }}
                        {{ form_row(form.phone, {'attr': {'class': 'form-control signup-email'}}) }}
                    </div><!--//form-group-->

                    <div class="email mb-3 col-6">
                        {{ form_label(form.pays, 'Pays') }}
                        {{ form_row(form.pays, {'attr': {'class': 'form-control select signup-email'}}) }}
                    </div><!--//form-group-->
                    <div class="email mb-3 col-6">
                        {{ form_label(form.ville, 'Ville') }}
                        {{ form_row(form.ville, {'attr': {'class': 'form-control signup-email'}}) }}
                    </div><!--//form-group-->

                    <div class="email mb-3 col-6">
                        {{ form_label(form.adresse, 'Adresse') }}
                        {{ form_row(form.adresse, {'attr': {'class': 'form-control signup-email'}}) }}
                    </div><!--//form-group-->
                    <div class="email mb-3 col-6">
                        {{ form_label(form.mydevise, 'Choissisez une devise') }}
                        {{ form_row(form.mydevise, {'attr': {'class': 'form-control select signup-email'}}) }}
                    </div><!--//form-group-->
                    <div class="email mb-3 col-6">
                        {{ form_label(form.banque, 'La banque ou avez deja un compte') }}
                        {{ form_row(form.banque, {'attr': {'class': 'form-control signup-email'}}) }}
                    </div><!--//form-group-->

                    <div class="email mb-3 col-12">
                        {{ form_label(form.password, 'Mot de passe') }}
                        {{ form_row(form.password, {'attr': {'class': 'form-control signup-password'}}) }}
                    </div><!--//form-group-->

                    <div class="text-center">
                        {{form_row(form.submit)}}
                    </div>

                </div>

                {{ form_end(form) }}

            </div><!--//auth-form-container-->

        </div><!--//auth-wrapper-->
        </div><!--//container-->
    </section>

{% endblock %}
